<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:padding="12dp"
    android:background="@drawable/item_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Appium UIA2 服务状态信息"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="服务状态："
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUIA2Status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="未知"
            android:textSize="14sp"
            android:textColor="@color/color_warning" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="服务版本："
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUIA2Version"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="未知"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="监听端口："
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUIA2Port"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6790"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="会话ID："
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSessionId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="无"
            android:textSize="12sp"
            android:textColor="@color/color_text_secondary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="服务消息："
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvServiceMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="未连接"
            android:textSize="12sp"
            android:textColor="@color/color_text_secondary" />

    </LinearLayout>

    <Button
        android:id="@+id/btnGetUIA2Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取UIA2服务信息"
        android:layout_marginBottom="8dp"
        style="@style/Widget.Material3.Button" />

    <Button
        android:id="@+id/btnClearUIA2Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除信息"
        style="@style/Widget.Material3.Button.OutlinedButton" />

</LinearLayout>