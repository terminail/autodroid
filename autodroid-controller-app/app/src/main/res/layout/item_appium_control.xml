<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:padding="12dp"
    android:background="@drawable/item_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Appium UIA2 Server 控制"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="服务器状态："
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvServerStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="未知"
            android:textSize="14sp"
            android:textColor="@color/color_warning" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="最后检查："
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLastCheckTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="未检查"
            android:textSize="12sp"
            android:textColor="@color/color_text_secondary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="服务器版本："
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvServerVersion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="未知"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="监听端口："
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvServerPort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6790"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btnCheckAppiumStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="检查状态"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button" />

        <Button
            android:id="@+id/btnAppiumAppInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查看应用"
            android:layout_marginStart="8dp"
            style="@style/Widget.Material3.Button" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="电脑端启动Appium UIA2 Server："
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvStartInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用以下ADB命令启动UIA2 Server：\n\nadb shell am instrument -w io.appium.uiautomator2.server.test/androidx.test.runner.AndroidJUnitRunner\n\n停止服务器：\n\nadb shell am force-stop io.appium.uiautomator2.server\n\n注意：io.appium.uiautomator2.server.test 是测试应用，用于启动主服务器"
        android:textSize="12sp"
        android:background="@color/color_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:textIsSelectable="true"
        android:fontFamily="monospace" />


    <Button
        android:id="@+id/btnShareAdbCommands"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_share_adb_commands"
        android:layout_marginBottom="8dp"
        style="@style/Widget.Material3.Button" />

</LinearLayout>