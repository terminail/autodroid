{
    // Java配置
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.compile.nullAnalysis.mode": "automatic",
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx4G -Xms512m -Xlog:disable",
    "java.references.includeAccessors": true,
    "java.sources.organizeImports.starThreshold": 5,
    "java.sources.organizeImports.staticStarThreshold": 3,
    "java.project.referencedLibraries": [
        "autodroid-app/app/libs/*.jar",
        "autodroid-app/app/src/**/*.jar"
    ],
    "java.project.sourcePaths": [
        "autodroid-app/app/src/main/java",
        "autodroid-app/app/src/main/kotlin"
    ],
    "java.import.gradle.enabled": true,
    "java.import.gradle.wrapper.enabled": true,
    "java.import.gradle.offline.enabled": false,
    "java.import.gradle.autoSync": true,
    "java.import.gradle.java.home": "",
    "java.import.gradle.jvmArguments": "-Xmx4G",
    "java.import.gradle.arguments": "",
    "java.import.gradle.user.home": "",
    "java.import.gradle.home": "",
    "java.import.gradle.version": "",
    "java.import.maven.enabled": true,
    // JDK配置
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-17",
            "path": "C:\\Program Files\\Java\\jdk-17.0.2",
            "default": true
        }
    ],
    // Android SDK配置
    "java.import.gradle.android": true,
    "java.configuration.checkProjectSettingsExclusions": false,
    "java.compile.nullAnalysis.mode": "disabled",
    "java.configuration.maven.userSettings": "",
    "java.configuration.maven.globalSettings": "",
    "java.configuration.maven.defaultMojoExecutionAction": "ignore",
    "java.templates.fileHeader": "",
    "java.templates.typeComment": "",
    "java.saveActions.organizeImports": true,
    "java.project.importOnFirstTimeStartup": "automatic",
    "java.project.importHint": true,
    "java.project.resourceFilters": [
        "node_modules",
        ".git"
    ],
    "java.referencesCodeLens.enabled": true,
    "java.implementationsCodeLens.enabled": true,
    "java.configuration.updateBuildConfiguration": "interactive",
    "java.import.gradle.offline.enabled": false,
    "java.import.gradle.autoRefresh": true,
    "java.import.gradle.wrapper.checksums": "",
    "java.import.gradle.java.home": "C:\\Program Files\\Java\\jdk-17.0.2",
    "java.import.gradle.jvmArguments": "-Dandroid.sdk.path=C:\\Android\\SDK -Xmx4G",
    "java.import.gradle.arguments": "-Dandroid.sdk.path=C:\\Android\\SDK",
    // 文件排除配置
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/build": true,
        "**/.gradle": true,
        "**/node_modules": true
    },
    // 搜索排除配置
    "search.exclude": {
        "**/build": true,
        "**/.gradle": true,
        "**/node_modules": true
    },
    // Kotlin配置 - 简化配置以解决崩溃问题
    "kotlin.debugAdapter.enabled": false,
    "kotlin.enableCodeLens": false,
    "kotlin.enableCompletion": true,
    "kotlin.enableDebug": false,
    "kotlin.enableHover": true,
    "kotlin.enableSignatureHelp": false,
    "kotlin.languageServer.enabled": false,
    // 调试配置
    "java.debug.settings.onBuildFailureProceed": true,
    "java.debug.settings.forceBuildBeforeLaunch": true,
    // 代码补全配置
    "java.completion.importOrder": [
        "java",
        "javax",
        "com",
        "org"
    ],
    // 工作区根目录设置
    "java.import.gradle.project.workspace": "d:\\git\\autodroid\\autodroid-app",
    // 源码跳转配置
    "editor.quickSuggestions": {
        "strings": true,
        "comments": true,
        "other": true
    },
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestOnTriggerCharacters": true,
    "editor.wordBasedSuggestions": "matchingDocuments",
    "editor.parameterHints.enabled": true,
    "editor.quickSuggestionsDelay": 10,
    // 语言服务器配置
    "java.server.launchMode": "Standard",
    "java.trace.server": "off",
    // 保存时自动格式化
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    }
}