<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Workflow Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/workflow_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Workflow Name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/workflow_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Workflow description will be shown here."
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/workflow_detail_package"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Package: com.example.app"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/workflow_detail_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Version Constraint: *"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Parameters Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Parameters"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/workflow_detail_toggle_params_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show Parameters"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/workflow_detail_params_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Execution Controls Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Execution Controls"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/workflow_detail_start_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Start"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/workflow_detail_stop_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Stop"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="8dp"
                        android:enabled="false" />

                </LinearLayout>

                <!-- Execution Info (Initially hidden) -->
                <LinearLayout
                    android:id="@+id/workflow_detail_execution_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/workflow_detail_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status: Not Started"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/workflow_detail_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start Time: N/A"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/workflow_detail_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="End Time: N/A"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/workflow_detail_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration: 00:00:00"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Back Button -->
        <Button
            android:id="@+id/workflow_detail_back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>