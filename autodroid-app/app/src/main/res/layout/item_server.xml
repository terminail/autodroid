<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Server Info"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Server Connection Status Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:id="@+id/connection_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Please select discovery method below"
                android:textSize="14sp" />
                
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server Health:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:id="@+id/server_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="14sp" />
                
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server Name:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:id="@+id/server_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="14sp" />
                
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hostname:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:id="@+id/server_hostname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="14sp" />
                
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Platform:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:id="@+id/server_platform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="14sp" />
                
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="API Endpoint:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:id="@+id/api_endpoint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="14sp" />
                
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discovery Method:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:id="@+id/discovery_method"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select discovery method"
                android:textSize="14sp" />
                
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            
            <Button
                android:id="@+id/start_mdns_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="START mDNS"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white"
                android:layout_marginEnd="4dp"
                android:visibility="visible" />
                
            <Button
                android:id="@+id/scan_qr_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SCAN QRCODE"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:visibility="visible" />
                
            <Button
                android:id="@+id/manual_set_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MANUAL SET"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp"
                android:visibility="visible" />
                
        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>